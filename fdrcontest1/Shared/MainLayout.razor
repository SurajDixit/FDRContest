@inherits LayoutComponentBase

<MudThemeProvider @bind-IsDarkMode="@_isDarkMode" />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Color="Color.Dark" Elevation="0">
        <MudHidden Breakpoint="Breakpoint.SmAndDown">
            <MudIcon Color="Color.Inherit" Icon="@Icons.Filled.Work" Size="Size.Large" />
        </MudHidden>
        <MudHidden Breakpoint="Breakpoint.Xs">
            <MudText Typo="Typo.h6" Class="ml-4">FDR Contest</MudText>
        </MudHidden>
        <MudSpacer />
        <MudIconButton Icon="@Icons.Filled.AccountCircle" Color="Color.Inherit" Target="_blank" />
        <LoginDisplay /> 
    </MudAppBar>
    <MudDrawer @bind-Open="_drawerOpen" Elevation="25" ClipMode="DrawerClipMode.Always">
        <NavMenu />
    </MudDrawer>
     <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Large" Class="my-3 pt-3">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    
    bool _drawerOpen = true;
    public bool _isDarkMode = false;
    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}